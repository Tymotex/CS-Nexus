<%- include("partials/authHeader.ejs") %>

<div class="container-login"">
	<div class="login-box">
		<form class="login100-form validate-form flex-sb flex-w">
			<div class="center-children">
				<h3 style="text-align: center;">Register Now</h3>
			</div>
			<hr>
			<div class="row">
				<div class="col-md-6">
					<a href="#" class="btn-facebook alternative-sign-in-button">
						<i class="fab fa-facebook"></i>
						Facebook
					</a>
				</div>
				<div class="col-md-6">
					<a href="#" class="btn-google m-b-20">
						<i class="fab fa-google" style="padding-right: 15px;"></i>
						Google
					</a>
				</div>
			</div>
			<br>

			<!-- Email -->
			<div>
				<span class="txt1">
					Email
				</span>
			</div>
			<div class="wrap-input validate-input" data-validate="Email is required">
				<input class="input100" type="text" name="email" style="background-color: whitesmoke;" required autofocus>
				<span class="focus-input100"></span>
			</div>
			<br>
			
			<!-- Username -->
			<div>
				<span class="txt1">
					Username
				</span>
			</div>
			<div class="wrap-input validate-input" data-validate="Username is required">
				<input class="input100" type="text" name="username" required>
				<span class="focus-input100"></span>
			</div>
			<br>
			
			<!-- Password -->
			<span class="txt1">
				Password
			</span>
			<div class="wrap-input validate-input" data-validate="Password is required">
				<input class="input100" type="password" name="password" required>
				<span class="focus-input100"></span>
			</div>
			<div class="text-center">
				<a href="/reset">
					Forgot password?
				</a>
			</div>

			<br>
			<button class="login100-form-btn">
				Register
			</button>

			<!-- <div class="w-full text-center p-t-55">
				<span class="txt2">
					Not a member?
				</span>

				<a href="#" class="txt2 bo1">
					Sign up now
				</a>
			</div> -->
		</form>
	</div>
</div>


