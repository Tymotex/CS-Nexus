<%- include("../partials/header.ejs") %>

<div class="blogMainBody">
    <div id="viewBlogContainer" class="blogContainer ui piled segment">
        <h1 class="ui center aligned icon header">
            <i id="bigHeaderIcon" class="circular coffee icon"></i>
            Computer Science Blogs
        </h1>
        <div class="ui section divider"></div>
        <% for (let i = 0; i < blogs.length; i++) { %>        
            <div id="viewBlogBody" class="ui items">
                <div class="item">
                    <div class="image"><img class="ui medium rounded image" src="<%= blogs[i].image %>"></div>
                    <div class="content"><a class="header" href="/blogs/<%= blogs[i]._id %>"><%= blogs[i].title %></a>
                        <div class="meta"><span><%= blogs[i].author %></span> </div>
                        <div class="description">
                            <p>
                                <%- blogs[i].content.substring(0, 100) %>... <a href="/blogs/<%= blogs[i]._id %>">Read more</a>
                            </p>
                        </div>
                        <div class="extra"><%= moment(blogs[i].timeCreated).format("DD-MM-YYYY") %></div>
     
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include("../partials/footer.ejs") %>